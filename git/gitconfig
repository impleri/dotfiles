[user]
	name = "Christopher Roussel"
	email = "christopher@impleri.net"
[gui]
	warndetachedcommit = true
[apply]
	whitespace = fix
[core]
	autocrlf = false
	filemode = false
	excludesfile = ~/.gitignore
[diff]
	renamelimit = 9000000
[alias]
	a = add
	b = branch
	ba = branch -va
	c = commit -m
	cb = checkout -b
	co = checkout
	f = fetch
	ff = pull --ff-only
	g = gui
	m = merge --no-ff
	p = push
	r = pull --rebase
	s = status
	sa = stash apply
	sf = svn fetch
	sp = svn dcommit
	sr = svn rebase
	ss = stash
	u = branch --set-upstream

	fest = flow feature start
	fefi = flow feature finish
	fep = flow feature publish

[push]
	default = current

